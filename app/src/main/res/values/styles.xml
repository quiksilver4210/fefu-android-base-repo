<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="HeadingText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RegularText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DefaultTextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="DefaultButton">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="DefaultRadioButton" parent="RegularText">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>

    <style name="DefaultInactiveNavItem">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="iconTint">#808080</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="DefaultActiveNavItem">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/purple</item>
        <item name="iconTint">@color/purple</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="DefaultTabItem">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#808080</item>
    </style>

    <style name="DefaultActivityInfoText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DefaultActivityMainDetailText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DefaultActivitySubHeadText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DefaultActivitySubDetailText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DetailCommentTextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginEnd">32dp</item>
    </style>
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:contentInsetStart="20dp"
    app:contentInsetStartWithNavigation="0dp"

    <style name="ActivityDetailToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


</resources>